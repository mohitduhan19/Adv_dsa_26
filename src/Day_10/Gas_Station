    public int canCompleteCircuit(int[] gas, int[] cost) {
        int surp = 0 , total = 0 , s = 0;

        for(int e = 0;e< cost.length;e++){
            surp += gas[e] - cost[e];
            total += gas[e] - cost[e];

            if(surp < 0){
                surp = 0;
                s = e + 1;
            }
        }
       return  (total < 0) ? -1:s;
    }