  List<TreeNode> ans = new ArrayList<>();
    public TreeNode balanceBST(TreeNode root) {
        help(root);
        if(ans.size() == 0)return null;
        return formTree(0 , ans.size() -1);
    }

    public void help(TreeNode node){
        if(node == null)return;
        help(node.left);
        ans.add(node);
        help(node.right);
    }

    public TreeNode formTree(int s , int e){
        if(s > e)return null;
        int mid = (s+e)/2;
        TreeNode root = ans.get(mid);
        root.left = formTree(s , mid-1);
        root.right = formTree(mid+1 , e);
        return root;
    }