/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    public void findparent(HashMap<TreeNode , TreeNode> hm , TreeNode root){
        if(root == null)return;
        if(root.left != null){
            hm.put(root.left , root);
            //5 3
        }
        if(root.right != null){
            hm.put(root.right , root);
        }
        findparent(hm , root.left);
        findparent(hm , root.right);
        return;
    }
    public List<Integer> distanceK(TreeNode root, TreeNode target, int k) {
        List<Integer> ans = new ArrayList<>();
        if(root == null)return ans;
        HashMap<TreeNode , TreeNode> parentMap = new HashMap<>();
        findparent(parentMap , root);

        Queue<TreeNode> q = new ArrayDeque<>();
        HashSet<TreeNode> vis = new HashSet<>();
        q.add(target);

        while(q.size() > 0){
            int size = q.size();
            while(size-- > 0 ){
                TreeNode curr = q.remove();
                vis.add(curr);
                if(k == 0){
                    ans.add(curr.val);
                }

                if(parentMap.containsKey(curr) && !vis.contains(parentMap.get(curr))){
                    q.add(parentMap.get(curr));
                }

                if(curr.left != null && !vis.contains(curr.left))q.add(curr.left);
                if(curr.right != null && !vis.contains(curr.right))q.add(curr.right);
            }
            k--;
            if(k < 0)break;
        }
        return ans;
    }
}