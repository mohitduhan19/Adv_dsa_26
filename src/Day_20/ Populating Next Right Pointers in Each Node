  public Node connect(Node root) {
        if(root == null)return root;
        Node curr = root;

        while(curr.left != null){
            Node n = curr;

            while(n != null){
                n.left.next= n.right;
                if(n.next == null)break;
                n.right.next = n.next.left;
                n = n.next;
            }
            curr = curr.left;
        }
        return root;
    }